{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "ESNext",
        "target": "ESNext",

        "rootDir": "./src",
        "outDir": "./builded",

        "esModuleInterop": true,
        "skipLibCheck": true,
        "removeComments": true,
        "sourceMap": false,
        "strict": true,

        "paths": { "@/*": ["./src/*"] }
    },
    "exclude": ["node_modules"],
    "include": ["**/*.ts"]
}
